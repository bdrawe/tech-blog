<article class="post">
  <div class="title">
    <h4 class="post-title">{{post.title}}</h4>
    <p>{{post.text}}</p> 
    <span>{{post.created_at}} || by {{post.user.username}}</span>
    <hr> 
    <a href='/post/{{id}}'>Comment(s):{{post.coment.length}}</a>
  </div>
</article>
{{#if loggedIn}}
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">Post Comment</button>
    </div>
</form>
{{/if}}

<div class="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}